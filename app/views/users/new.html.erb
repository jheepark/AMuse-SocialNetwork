<h1>Sign Up</h1>
<% if @user.errors.any? %>
<ol>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ol>
<% end %>
<div class="signin">
  <%= form_for @user do |f| %>
  <fieldset>
    <%= f.label :image, "Profile Picture" %>
    <br>
    <%= f.url_field :image, :placeholder => "http..." %>
  </fieldset>
  <fieldset>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, :require => true %>
  </fieldset>
  <fieldset>
    <%= f.label :email %>
    <br>
    <%= f.email_field :email, :require => true %>
  </fieldset>
  <fieldset>
    <%= f.label :location %>
    <br>
    <%= f.text_field :location %>
  </fieldset>
  <fieldset>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
  </fieldset>
  <fieldset>
    <%= f.label :password_confirmation %>
    <br>
    <%= f.password_field :password_confirmation %>
  </fieldset>
  <%= f.submit "Sign Up!", :class => 'submit' %>
  <% end %>
</div>
