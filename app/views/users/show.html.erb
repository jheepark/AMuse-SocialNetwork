<div class="container">
  <aside class= "userleft">
    <h2><%= @user.name %></h2>
      <%= image_tag @user.image, :class =>'feature' %>
      <section class="stats">
  <%= render 'shared/stats' %>
</section>
<div class="followform">
  <%= render 'follow_form' if @current_user.present? %>
</div>
<div class="userinfo">
  <p>Artworks: <%= @user.artworks.length %></p>
  <p>Location: <%= @user.location %></p>
</div>
      <br>
    <% if @current_user.id == @user.id %>
    <div class="controls">
      <%= link_to "Edit Profile", edit_user_path(@user)%>
      <%= link_to "Delete Profile", @user, :method => :delete, :data => {:confirm => 'Are you sure?'}%>
    </div>
    <% end %>
  </aside>
  <div class= "userright">
    <h1> Artworks </h1>
    <div class="userartworks">
      <% @user.artworks.each do |a| %>
        <%= link_to (image_tag a.image, :class => 'allartworksuser'), a %>
      <% end %>
    </div>

    <h1> Photos </h1>
      <% @user.photos.each do |p| %>
        <%= link_to (image_tag p.image, :class => 'allphotos'), p %>
      <% end %>

      <% if @current_user.id == @user.id %>
      <h3>Inspire others by uploading a photo</h3>
      <div class="upload">
        <%= link_to "Upload Photo", new_photo_path%>
      </div>
      <% end %>
    </div>
</div>
