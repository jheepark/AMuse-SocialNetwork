<div class="displayfollowinfo">
  <div class="allfollowinfo">
  <a href="<%= user_path(user) %>">
    <div class="trialfollow" style="background-image: url(<%=user.image%>)">
    </div>
  </a>
  <div class="f_info">
    <h4><%=user.name%></h4>
  <% if @current_user == @user%>
  <% if @title == "Following" %>
  <br>
    <%= link_to "Unfollow", relationship_path( @current_user.active_relationships.find_by(followed_id: user.id) ), :method => :delete, :data => {:confirm => 'Are you sure?'}, class:"tounfollow"%>
    <% end %>
  <% end %>
  </div>
  </div>
</div>
