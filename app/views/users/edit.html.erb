<div class="homeedit signup">
  <div class="blackbox">
  <h1 class="editprofile moveleft">Edit Profile</h1>
    <div class="editform">
      <%= form_for @user, :html => {:multipart => true} do|f| %>
      <%= hidden_field_tag :user_id, params[:user_id]%>
      <fieldset>
        <%= f.label :image, "Profile Picture" %>
        <br>
        <div class="signuppicdiv">
          <%= image_tag "defaultpp.jpg", :class => 'signuppic' %>
          <%= f.file_field :image %>
        </div>
      </fieldset>
      <fieldset>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name, :require => true %>
      </fieldset>
      <fieldset>
        <%= f.label :email %>
        <br>
        <%= f.email_field :email, :require => true %>
      </fieldset>
      <fieldset>
        <%= f.label :location %>
        <br>
        <%= f.text_field :location %>
      </fieldset>
      <fieldset>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
      </fieldset>
      <fieldset>
        <%= f.label :password_confirmation %>
        <br>
        <%= f.password_field :password_confirmation %>
      </fieldset>
      <%= f.submit "Edit", class: 'submit'%>
    </div>
    <% end %>
  </div>
</div>
