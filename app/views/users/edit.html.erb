<div class="homeedit">
  <div class="blackbox">
  <h1>Edit Profile</h1>
    <div class="editform">
      <%= form_for @user do |f| %>
      <fieldset>
        <%= f.label :image, "Profile Picture" %>
        <br>
        <%= f.url_field :image, :placeholder => "http..." %>
      </fieldset>
      <fieldset>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name, :require => true %>
      </fieldset>
      <fieldset>
        <%= f.label :email %>
        <br>
        <%= f.email_field :email, :require => true %>
      </fieldset>
      <fieldset>
        <%= f.label :location %>
        <br>
        <%= f.text_field :location %>
      </fieldset>
      <fieldset>
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
      </fieldset>
      <fieldset>
        <%= f.label :password_confirmation %>
        <br>
        <%= f.password_field :password_confirmation %>
      </fieldset>
      <%= f.submit "Edit", class: 'submit'%>
    </div>
    <% end %>
  </div>
</div>
