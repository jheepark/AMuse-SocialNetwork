<h1>Sign In</h1>
<% if flash[:error].present? %>
<p class ="error">
  <%= flash[:error] %>
</p>
<% end %>
<div class="signin">
  <%= form_tag login_path do %>
  <%= label_tag :email %>
  <br>
  <%= email_field_tag :email, nil %>
  <br>
  <%= label_tag :password %>
  <br>
  <%= password_field_tag :password, nil %>
  <br>
  <%= submit_tag 'Sign in', :class => "submit"%>
  <% end %>
</div>
